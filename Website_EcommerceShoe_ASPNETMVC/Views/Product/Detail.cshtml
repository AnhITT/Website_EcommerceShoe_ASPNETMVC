@helper Downline(string input)
{

    if (input == null)
    {
        @input
    }

    else
    {
        for (int i = 0; i < input.Length; i++)
        {
            if (input[i] == '.')
            {
                @input[i]
                <br />
            }
            else
            {
                @input[i]
            }

        }

    }
}
