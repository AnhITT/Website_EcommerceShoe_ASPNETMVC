@using Website_EcommerceShoe_ASPNETMVC.Models.EF
@{
    List<Product> relateProduct = ViewBag.ProductCartegory;
}
@if (relateProduct != null)
{
    foreach (Product item in relateProduct)
    {
        <div class="card product-item border-0">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <img class="img-fluid w-100" style="height: 400px" src="~/Content/Image/Product/@item.UrlImgCover" alt="">
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3">Colorful Stylish Shirt</h6>
                <div class="d-flex justify-content-center">
                    <h6>$123.00</h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between bg-light border">
                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-dark mr-1"></i>View Detail</a>
                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-dark mr-1"></i>Add To Cart</a>
            </div>
        </div>
    }
}
