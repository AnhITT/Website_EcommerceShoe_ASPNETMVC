@model IEnumerable<Website_EcommerceShoe_ASPNETMVC.Models.EF.ShoppingCartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="min-height: 285px" class="container product_section_container p-4">
    <div class="row">
        <div class="col product_section clearfix">
            <div class="row">
                <div class="col-md-12 pt-3" id="load_data">
                    @Html.Action("Partial_Item_Cart", "ShoppingCart")
                </div>
                <div class="col-md-12">
                    @if (ViewBag.CheckCart != null)
                    {
                        <div class="text-right">
                            <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
                            <a href="/thanh-toan" class="btn btn-success">Thanh toán</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/single_custom.js"></script>
}