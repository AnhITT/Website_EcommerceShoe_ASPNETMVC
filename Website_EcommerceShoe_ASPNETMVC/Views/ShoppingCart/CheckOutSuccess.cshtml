@model Website_EcommerceShoe_ASPNETMVC.Models.EF.Order
@{
    ViewBag.Title = "CheckOutSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div style="margin-bottom: 100px;" class="col-md-6 mx-auto mt-5">
            <div class="payment">
                <div class="payment_header">
                    <div class="check"><i class="fa fa-check" aria-hidden="true"></i></div>
                </div>
                <div class="content">
                    <h1>Order Success !</h1>
                    <p>Order @Model.Code will be shipped to your address in 3-5 days. </p>
                    <a class="btn btn-outline-dark" href="/Home/Index">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>


    .payment {
        border: 1px solid #212529;
        height: 280px;
        border-radius: 20px;
        background: #fff;
    }

    .payment_header {
        background: #212529;
        padding: 20px;
        border-radius: 20px 20px 0px 0px;
    }

    .check {
        margin: 0px auto;
        width: 50px;
        height: 50px;
        border-radius: 100%;
        background: #fff;
        text-align: center;
    }

        .check i {
            vertical-align: middle;
            line-height: 50px;
            font-size: 30px;
            color: green;
        }

    .content {
        text-align: center;
    }

        .content h1 {
            font-size: 25px;
            padding-top: 25px;
        }

        .content a {
            border-radius: 12px;
        }

</style>