@model Website_EcommerceShoe_ASPNETMVC.Models.EF.ProductSale

@{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item h5"><a href="QLProductSale"> <i class="uil-dollar-sign-alt"></i> Quản lý sale</a></li>
            <li class="breadcrumb-item h5">Thêm sự kiện sale</li>
        </ol>
    </nav>
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center ">Thêm sự kiện sale</h2>
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                <div class="mt-2">
                                    Tên sự kiện sale
                                    <div>
                                        @Html.EditorFor(model => model.namePS, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.namePS, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="mt-2">
                                    Mô tả
                                    <div>
                                        @Html.EditorFor(model => model.descriptionPS, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.descriptionPS, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="mt-2">
                                    Giảm theo giá
                                    <div>
                                        @Html.EditorFor(model => model.priceSalePS, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.priceSalePS, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="mt-2">
                                    Giảm theo phần trăm
                                    <div>
                                        @Html.EditorFor(model => model.salePSPhanTram, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.salePSPhanTram, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                               
                                <div class="mt-2">
                                    Ngày bắt đầu
                                    <div>
                                        <input type="date" name="dateStartSale" required autocomplete="off" />
                                    </div>
                                </div>
                                <div class="mt-2">
                                    Ngày kết thúc
                                    <div>
                                        <input type="date" name="dateEndSale" required autocomplete="off" />
                                    </div>
                                </div>
                                <div class="mt-2">
                                    Số lượng
                                    <div>
                                        @Html.EditorFor(model => model.quantityPS, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.quantityPS, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" href="QLProductSale"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Thêm sự kiện" class="btn btn-success m-3" />
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>