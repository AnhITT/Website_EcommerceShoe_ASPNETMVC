@model Website_EcommerceShoe_ASPNETMVC.Models.EF.Product
@{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item h5"><a href="QLProduct"><i class="uil-cart"></i> Quản lý sản phẩm</a></li>
            <li class="breadcrumb-item h5">Thêm sản phẩm</li>
        </ol>
    </nav>
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center ">Thêm sản phẩm</h2>
                            @using (Html.BeginForm("AddProduct", "QLProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.ValidationSummary(true)
                                <div>
                                    Thương hiệu
                                    @Html.DropDownListFor(x => x.idBrand, ViewBag.idBR as SelectList, "-Chọn thương hiệu sản phẩm-", new { @class = "dropdown", @placeholder = "Mã mã phẩm" })

                                </div>
                                <div class="mt-2">
                                    Danh mục
                                    @Html.DropDownListFor(x => x.idCar, ViewBag.idCAR as SelectList, "-Chọn danh mục sản phẩm-", new { @style = "margin-left: 15px", @class = "dropdown", @placeholder = "Mã mã phẩm" })

                                </div>
                                <div class="mt-2">
                                    Tên sản phẩm
                                    <div>
                                        @Html.EditorFor(model => model.nameProduct, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="mt-2">
                                    Mô tả sản phẩm
                                    <div>
                                        <textarea name="descriptionProduct" placeholder="Nhập thông tin sản phẩm"></textarea>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    Hình ảnh trước
                                    <input type="file" name="fileupload" /> <br />
                                    @ViewBag.Thongbao
                                </div>

                                <div class="mt-2">
                                    Giá sản phẩm
                                    <div>
                                        @Html.EditorFor(model => model.priceProduct, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.priceProduct, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="mt-2 d-flex justify-content-start">
                                    Đăng bán
                                    <div class="form-check form-switch mx-1">
                                        @Html.EditorFor(model => model.statusProduct, new { htmlAttributes = new { @class = "form-check-input", @type = "checkbox", @id = "flexSwitchCheckDefault" } })
                                    </div>
                                </div>
                                <div class="mt-2">
                                    Thêm vào sự kiện Sale
                                    @Html.DropDownListFor(x => x.idPSale, ViewBag.idSALE as SelectList, "-Chọn sự kiện giảm giá-", new { @style = "margin-left: 15px", @class = "dropdown", @placeholder = "Mã mã phẩm" })

                                </div>
                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-dark" href="QLProduct"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                                    <input type="submit" value="Thêm sản phẩm" class="btn btn-success m-3" />
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>