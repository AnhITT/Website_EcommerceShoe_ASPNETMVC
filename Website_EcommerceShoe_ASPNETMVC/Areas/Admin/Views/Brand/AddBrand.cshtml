@model Website_EcommerceShoe_ASPNETMVC.Models.EF.Brand

@{
    ViewBag.Title = "AddBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="bg-image"
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
              <div class="card" style="border-radius: 15px;">
                  <div class="card-body p-5">
                      <h2 class="text-uppercase text-center ">Thêm danh mục</h2>
                      @using (Html.BeginForm())
                      {
                          @Html.ValidationSummary(true)
                          <div>
                              Nhập mã danh mục
                              <div>
                                  @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                              </div>
                          </div>

                          <div>
                              Nhập tên danh mục
                              <div>
                                  @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                              </div>
                          </div>

                          <div class="d-flex justify-content-center align-items-center">
                              <a class="btn btn-dark" href="QLDanhMuc"><i class="fa-solid fa-chevron-left"></i> Quay lại</a>
                              <input type="submit" value="Thêm danh mục" class="btn btn-success m-3" />
                          </div>
                      }

                  </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

